---
import '@fontsource-variable/reddit-mono'
import Analytics from '@vercel/analytics/astro'

import Footer from '@/components/Footer.astro';
import Navbar from '@/components/Navbar.astro';
import { getLangFromUrl } from '@/i18n/utils';

interface Props {
	title: string;
}

const { title } = Astro.props;
const lang = getLangFromUrl(Astro.url);
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Alejandro Guinot's personal portfolio" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg" href="/codeIcon.svg" />
		<title>{title}</title>
		<Analytics />
	</head>
	<body class="font-sans antialiased">
		<div class="min-h-screen bg-gradient-to-r from-[#1d043c] from-10% via-[#3c156e] via-30% to-[#451e4a] to-90% text-slate-100">
			<Navbar />
			<main>
				<div class="relative min-h-screen sm:flex sm:flex-col sm:justify-center sm:items-center selection:bg-violet-500 selection:text-white">
					<div class="max-w-5xl mx-auto">
						<slot />
					</div>
				</div>
				<Footer />
			</main>
		</div>
	</body>
</html>
<style is:global>
	[x-cloak] {
		display: none !important;
	}
	html {
		scroll-behavior: smooth;
	}
</style>