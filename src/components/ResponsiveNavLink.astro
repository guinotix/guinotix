---
interface Props {
    link: string;
}

const { link } = Astro.props;

const pathname = new URL(Astro.request.url).pathname;
const pathMatch = pathname.replace(/\/$/, '') == link.replace(/\/$/, '');

let classes: string;
if (pathMatch) {
    classes = "block w-full pl-3 pr-4 py-2 border-l-4 border-indigo-400 text-left text-base font-medium text-indigo-700 bg-indigo-200 focus:outline-none focus:text-indigo-800 focus:bg-indigo-100 focus:border-indigo-700 transition duration-150 ease-in-out"
} else {
    classes = "block w-full pl-3 pr-4 py-2 border-l-4 border-transparent text-left text-base font-medium text-gray-600 hover:text-gray-800 hover:bg-slate-300 hover:border-gray-300 focus:outline-none focus:text-gray-800 focus:bg-gray-50 focus:border-gray-300 transition duration-150 ease-in-out"
}
---

<a class={classes} href={link}>
    <slot />
</a>
