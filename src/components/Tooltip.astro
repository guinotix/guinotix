---
interface Props {
    label: string;
}

const { label } = Astro.props;
---

<div class="relative group">
    <slot />
    <span class="absolute bottom-[-2.5rem] left-1/2 -translate-x-1/2 
        bg-violet-800 text-white text-sm px-2 py-1 rounded-md 
        opacity-0 translate-y-2
        group-hover:opacity-100 group-hover:translate-y-0 
        transition-all duration-100 ease-in whitespace-nowrap"
    >
    {label}
        <span class="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-full
            w-0 h-0 border-x-8 border-x-transparent 
            border-b-8 border-b-violet-800">
        </span>
    </span>
</div>
